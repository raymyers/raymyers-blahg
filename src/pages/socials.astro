---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ColorScript from "../components/ColorScript.astro";
import { title as SITE_TITLE, subtitle as SITE_DESCRIPTION } from "../settings/settings.json";

const socialLinks = [
  { name: "LinkedIn", url: "https://www.linkedin.com/in/cadrlife" },
  { name: "YouTube", url: "https://www.youtube.com/channel/UC4nEbAo5xFsOZDk2v0RIGHA" },
  { name: "GitHub", url: "https://github.com/raymyers" },
  { name: "Bluesky", url: "https://raymyers.bsky.social" },
];
---

<!doctype html>
<html lang="en-us">
  <BaseHead title={`Socials - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  <body>
    <Header />
    <main>
      <h1>Socials</h1>
      
      <p>Find me on these platforms:</p>
      
      <ul>
        {socialLinks.map((link) => (
          <li>
            <a href={link.url} target="_blank" rel="noopener noreferrer">
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
    <ColorScript />
  </body>
</html>
